section
  text-align center
  overflow hidden

  .copy, .code-window
    transition-property opacity, transform
    transition-timing-function cubic-bezier(.29, .82, .34, .99)
    transition-duration 1.3s

  .code-window
    margin-top 4em

  a.read-more
    color inherit
    font-size(0.6em, raw: true)
    font-weight 400
    text-transform uppercase
    margin-left 0.4em
  a.read-more:after
    content 'â–º'
    margin-left 0.2em
    color inherit

html.js section:not(.shown)
  .copy, .code-window
    opacity 0

  .copy
    transform translateY(7em)

  .code-window
    transform translateY(12em)

  .code-window.\\--back
    transform translateY(16em)

section#main
  background-color #fafafa
  padding-top 9%
  padding-bottom 9%

section#main h1
  color #7596ff

section#realtime
  background-color #ffe6ee
  padding-top 7%
  padding-bottom 7%

section#realtime h1
  color #7596ff

section#fast-modern
  background-color #7596ff
  padding-top 7%
  padding-bottom 7%

section#fast-modern h1, section#fast-modern p
  color white

section#end-to-end
  background-color #1c1c1c
  padding-top 7%
  padding-bottom 7%

section#end-to-end h1
  color white
  font-weight bold

section#end-to-end p, .pale-red
  color #ffccdd

section#get-started h1
  color #ff0051

section#get-started
  background-color #fafafa
  padding-top 7%
  padding-bottom 7%

img.emoji
  height 1.2em
  width 1.2em
  position relative
  top 0.3em
  margin-top -0.6em

.copy
  max-width 28em
  padding(left: 1, right: 1)
  margin auto
  font-weight 200

@media (min-width 40em)
  .copy
    max-width 45em
    p
      max-width 23em
      margin auto

.copy
  h1
    font-size 1.8
    line-height 2
    font-weight inherit
    margin(bottom: 1)

  p
    font-family aktiv-grotesk
    line-height 1.4
    color #4f4f4f

@media (min-width 40em)
  .copy h1
    font-size 2.7
    line-height 3

  .copy p
    font-size 1.3
    line-height 1.7

.code-window
  max-width 60em

section#main .code-window
  max-width 65em

section#realtime .code-window
  max-width 47em

section#fast-modern .code-window
  max-width 65em

section#end-to-end .code-window
  &.\\--back
    max-width 50em
  &.\\--front
    max-width 40em
  &:first-of-type
    margin-top 3em
  &:last-of-type
    margin-bottom 3em