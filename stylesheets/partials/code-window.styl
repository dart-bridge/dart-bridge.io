.code-window
  text-align left
  box-shadow 0 1em 3em rgba(0,0,0,0.2), inset 0 2em 4em -2em white, inset 0 0 1px rgba(0,0,0,0.3)
  border-radius 0.3em
  background-color #D3D3D3
  margin-top 1em
  margin-bottom 1em
  max-width rem(35)
  max-width px(35)
  width 90%
  display inline-block
  box-sizing border-box

.code-window__fake-button
  height 0.9em
  width 0.9em
  border-radius 0.45em

  display inline-block
  margin-top 0.6em
  margin-right 0.3em
  margin-bottom 0.6em
  box-shadow inset 0 0 1px rgba(0,0,0,0.2)

.code-window__fake-button:first-child
  margin-left 0.7em

.code-window__fake-button.\\--red
  background-color #FC605C

.code-window__fake-button.\\--yellow
  background-color #FDBC40

.code-window__fake-button.\\--green
  background-color #35CC4B


.code-window pre
  @media (min-width 35em)
    &, & code
      font-size 1.3
      line-height 1.8
      letter-spacing 0.01em
  background-color white
  margin-top 0
  margin-bottom 0
  padding-left 1.3em
  padding-bottom 1.3em
  border-top-right-radius 0
  border-top-left-radius 0
  border-bottom-right-radius 0.3em
  border-bottom-left-radius 0.3em


@media (min-width 35em)
  .code-window
    &.\\--front, &.\\--back
      position relative
    &.\\--front
      left 1em
      top -7em
@media (min-width 80em)
  .code-window
    &.\\--front
      left -3em
      top 3em
    &.\\--back
      right -3em