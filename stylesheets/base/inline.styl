a
  color blue
  text-decoration none

  &:hover
    color lightblue

  &:active
    color darkblue

kbd
  font-family aktiv-grotesk
  display inline-block
  background #222
  color white
  padding(left: 0.2, right: 0.2, top: 0.2, bottom: 0.17)
  font-size 0.7
  line-height-manual 1
  letter-spacing 0.03em
  border-radius 0.2em
  box-shadow 0 0.03em 0 0.05em black

pre, :not(pre) > code
  background lightness(black, 97%)
  box-shadow 0 0.04em 0.2em alpha(black, 14%)
  border-top 1px solid alpha(white, 80%)
  text-shadow 0 0.1em white

:not(pre) > code
  padding(top: 0.1, bottom: 0.2, left: 0.2, right: 0.2)
  border-radius 0.2em

pre
  padding(top: 1, left: 1, right: 1, bottom: 1)
  border-radius 0.2em
